#:kivy 2.1.0
#:import utils kivy.utils

<Button>
    font_size: 32
    background_normal: ''
    background_color: utils.get_color_from_hex('#900C3F')

<TextInput>
    background_normal: ''
    background_color: utils.get_color_from_hex('#FFFCDC')

<Label>
    font_size: 32

<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height 
        padding: 10
        spacing: 10

        Label:
            text: "Name"

        TextInput:
            multiline: False
        
        Label:
            text: "Favorite Pizza"

        TextInput:
            multiline: False
            
        Button:
            text: "Submit"
        Button:
            text: "Clear"
            background_color: utils.get_color_from_hex('#060750')